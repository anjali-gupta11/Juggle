<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Home2Activity">

     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juggle: Home Page"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_gravity="center">

            <!-- Add Reminder Button -->
            <ImageButton
                android:id="@+id/add_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle"
                android:src="@drawable/add"
                android:contentDescription="Add Reminder"
                android:layout_margin="16dp"
                android:scaleType="centerInside" />

            <!-- Categories Button -->
            <ImageButton
                android:id="@+id/categ_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle"
                android:src="@drawable/book"
                android:contentDescription="Categories"
                android:layout_margin="16dp"
                android:scaleType="centerInside" />

            <!-- Statistics Button -->
            <ImageButton
                android:id="@+id/statistics_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle"
                android:src="@drawable/graph"
                android:contentDescription="Statistics"
                android:layout_margin="16dp"
                android:scaleType="centerInside" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/settings_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle"
                android:src="@drawable/settings"
                android:contentDescription="Settings"
                android:layout_margin="16dp"
                android:scaleType="centerInside" />

        </GridLayout>



</LinearLayout>